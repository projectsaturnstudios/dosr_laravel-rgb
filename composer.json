{
  "name": "dept-of-scrapyard-robotics/laravel-rgb",
  "description": "A Laravel package for controlling RGB LED strips using the phpixel extension.",
  "type": "library",
  "version": "0.2.0",
  "license": "MIT",
  "require": {
    "php": "^8.3",
    "ext-phpixel": "*",
    "ext-sockets": "*",
    "illuminate/support": "^11.0|^12.0",
    "phpdafruit/neopixel-php": "^0.2.0",
    "projectsaturnstudios/laravel-design-patterns": "^0.1.0"
  },
  "require-dev": {
    "pestphp/pest": "^4.1",
    "mockery/mockery": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "DeptOfScrapyardRobotics\\LaravelRGB\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests"
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "test": "pest",
    "test:quiet": "pest --quiet",
    "test:coverage": "pest --coverage"
  },
  "minimum-stability": "stable",
  "extra": {
    "laravel": {
      "providers": [
        "DeptOfScrapyardRobotics\\LaravelRGB\\Providers\\LaravelRGBServiceProvider"
      ]
    }
  }
}
